<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".itkotoba.ITKotobaActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/itkotoba_tv_checkall"
            android:layout_width="100dp"
            android:text="Toàn bộ"
            android:textStyle="bold"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/itkotoba_tv_from"
            android:layout_width="100dp"
            android:text="Từ từ thứ"
            android:textStyle="bold"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/itkotoba_tv_to"
            android:layout_width="100dp"
            android:text="Đến từ thứ"
            android:textStyle="bold"/>
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <CheckBox
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/itkotoba_cb_all"/>
        <EditText
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/itkotoba_et_from"
            android:inputType="numberDecimal"/>

        <EditText
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/itkotoba_et_to"
            android:inputType="numberDecimal" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:id="@+id/itkotoba_btn_next"
            android:layout_column="1" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/itkotoba_tv_alert"
            android:layout_column="0"
            android:layout_span="3" />
    </TableRow>
</TableLayout>