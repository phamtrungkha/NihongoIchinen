<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kaitou_learn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ptk.nihongoichinen.kaitou.KaitouLearnActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kaitoulearn_tv_khoangcach"
        android:text="Khoảng cách: "
        android:layout_marginTop="10dp"
        android:textSize="17dp"/>
    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/kaitoulearn_et_khoangcach"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/kaitoulearn_tv_khoangcach"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kaitoulearn_tv_phut"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:text="phút."
        android:layout_toRightOf="@+id/kaitoulearn_et_khoangcach"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kaitoulearn_btn_setDistance"
        android:layout_toRightOf="@+id/kaitoulearn_tv_phut"
        android:text="Áp dụng"/>
    <ToggleButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textOn="Tạm ngưng"
        android:textOff="Bắt đầu/Tiếp tục"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/kaitoulearn_tgbtn_pause" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kaitoulearn_btn_repeat"
        android:text="Nghe lại"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kaitoulearn_btn_repeatlast"
        android:text="Câu trước"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kaitoulearn_btn_shutdown"
        android:text="Tắt hẳn"
        android:layout_above="@+id/kaitoulearn_tgbtn_pause"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />
</RelativeLayout>
